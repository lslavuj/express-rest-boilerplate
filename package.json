{
  "name": "express-rest-boilerplate",
  "version": "1.0.0",
  "description": "Express typescript rest boilerplate",
  "main": "index.ts",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "check-branch-name": ".husky/check-branch-name.sh",
    "prepare": "husky install",
    "start": "npm run build && node dist/app.js",
    "start-local-database": "docker compose up -d",
    "start:dev": "nodemon ./bin/www/server",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typeorm": "typeorm-ts-node-esm",
    "migration:run": "npm run typeorm migration:run -- -d ./src/database/config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lslavuj/express-rest-boilerplate.git"
  },
  "author": {
    "name": "Luka Slavuj",
    "email": "lukaslavuj@gmail.com",
    "url": "https://www.linkedin.com/in/luka-slavuj"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lslavuj/express-rest-boilerplate/issues"
  },
  "homepage": "https://github.com/lslavuj/express-rest-boilerplate#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "mysql2": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.12",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.10",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
